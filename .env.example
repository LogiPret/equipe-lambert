# Database connection string
POSTGRES_URL=postgresql://127.0.0.1:5432/your-database-name
# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE
# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=https://www.equipelambert.ca
# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE
# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE

# Gmail Configuration for Contact Form
# The Gmail account to send emails from
GMAIL_USER=your-email@gmail.com
# Gmail App Password (NOT your regular password - generate this from Google Account settings)
# Instructions: https://support.google.com/accounts/answer/185833
GMAIL_APP_PASSWORD=your-app-password-here
# Email address to receive contact form submissions (defaults to GMAIL_USER if not set)
CONTACT_FORM_RECIPIENT_EMAIL=recipient@example.com

# Twilio Configuration for SMS Notifications
# Twilio Account SID from https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Twilio Auth Token from https://console.twilio.com/
TWILIO_AUTH_TOKEN=your-auth-token-here
# Your Twilio phone number (must be in E.164 format: +15551234567)
TWILIO_PHONE_NUMBER=+15551234567
# Phone number to receive SMS notifications (must be in E.164 format: +15551234567)
SMS_RECIPIENT_PHONE_NUMBER=+15551234567