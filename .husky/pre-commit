#!/usr/bin/env sh

# Pre-commit hook for basic code quality checks
echo "🔍 Running pre-commit formatting..."

# run code formatter
pnpm run format

if ! git diff --quiet; then
    echo "✨ Code was formatted! Adding changes..."
    git add .
else
    echo "✅ Code is already properly formatted!"
fi

echo "✅ Pre-commit formatting done!"
